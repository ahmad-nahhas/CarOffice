@model ErrorViewModel

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Error Page</h1>
                <span>An unexpected error has occurred. Read the text below for more information</span>
            </div>
        </div>
    </div>
</div>

<div id="notfound">
    <div class="notfound">
        <div class="notfound-404">
            <h1>@Model.StatusCode</h1>
        </div>
        <h2>We are sorry, Page not found!</h2>
        <p>@Model.ErrorMessage</p>
        <a asp-controller="Home" asp-action="Index">Back To Homepage</a>
    </div>
</div>