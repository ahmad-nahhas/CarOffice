@model Car
@inject IRepository<CarBrand> Brands

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Edit Car</h1>
                <span>modify car information from here</span>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <h4 class="text-center mt-5 mb-2">Vehicle Information</h4>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-control" asp-items=@(new SelectList(Enum.GetNames(typeof(CarType))))></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BrandId" class="control-label"></label>
                    <select asp-for="BrandId" class="form-control" asp-items=@(new SelectList(await Brands.GetAsync(), "Id", "Name"))></select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control" asp-items=@(new SelectList(Enum.GetNames(typeof(CarStatus))))></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FuelType" class="control-label"></label>
                    <select asp-for="FuelType" class="form-control" asp-items=@(new SelectList(Enum.GetNames(typeof(FuelType))))></select>
                    <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gearbox" class="control-label"></label>
                    <select asp-for="Gearbox" class="form-control" asp-items=@(new SelectList(Enum.GetNames(typeof(Gearbox))))></select>
                    <span asp-validation-for="Gearbox" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ShowInHome" />
                        @Html.DisplayNameFor(model => model.ShowInHome)
                    </label>
                </div>
                <div class="form-group">
                    @if (Model != null && Model.Images != null)
                    {
                        foreach (var image in Model.Images)
                        {
                            <img src="~/assets/images/@image.Path" alt="Image upload error!" class="img-fluid m-2" style="height:64px;">
                        }
                    }
                </div>
                <div class="form-group">
                    <label asp-for="Files" class="control-label"></label>
                    <input asp-for="Files" class="form-control" type="file" multiple />
                    <span asp-validation-for="Files" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ModelYear" class="control-label"></label>
                    <input asp-for="ModelYear" class="form-control" />
                    <span asp-validation-for="ModelYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mileage" class="control-label"></label>
                    <input asp-for="Mileage" class="form-control" />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SeatCount" class="control-label"></label>
                    <input asp-for="SeatCount" class="form-control" />
                    <span asp-validation-for="SeatCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WeightTotal" class="control-label"></label>
                    <input asp-for="WeightTotal" class="form-control" />
                    <span asp-validation-for="WeightTotal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarExtras" class="control-label"></label>
                    <input asp-for="CarExtras" class="form-control" />
                    <span asp-validation-for="CarExtras" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-outline-danger" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>