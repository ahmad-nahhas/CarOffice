@model IEnumerable<Car>

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>All Cars</h1>
                <span>all added cars will appear here</span>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5 mb-5">
    <a class="btn btn-success btn-lg pull-right mb-3" asp-action="Create">Add New Car</a>
    <table class="table table-hover table-borderless table-light table-responsive-sm">
        <thead class="text-center">
            <tr>
                <th class="align-middle">
                    Image
                </th>
                <th class="align-middle">
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th class="align-middle">
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="align-middle">
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th class="align-middle">
                    Options
                </th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var car in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="img-thumbnail" style="height: 64px; width:64px; object-fit: cover;" src="~/assets/images/@(((car.Images.FirstOrDefault()) != null) ? car.Images.First().Path : string.Empty)" alt="Image upload error!">
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => car.Type)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => car.Brand.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => car.Price)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => car.CreatedAt)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@car.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-square" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm8.5 9.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z" />
                            </svg>
                        </a>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@car.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a>
                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@car.Id" onclick="return confirm('Are you sure you want to delete this?')">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>